<!DOCTYPE configuration PUBLIC "-//mybatis.org//DTD Config 3.0//EN" "http://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>
	<properties resource="app.properties"/>
	<typeAliases>
		<typeAlias alias="User" type="fr.cph.stock.entities.User"/>
		<typeAlias alias="Company" type="fr.cph.stock.entities.Company"/>
		<typeAlias alias="Equity" type="fr.cph.stock.entities.Equity"/>
		<typeAlias alias="Portfolio" type="fr.cph.stock.entities.Portfolio"/>
		<typeAlias alias="CurrencyData" type="fr.cph.stock.entities.CurrencyData"/>
		<typeAlias alias="ShareValue" type="fr.cph.stock.entities.ShareValue"/>
		<typeAlias alias="Index" type="fr.cph.stock.entities.Index"/>
		<typeAlias alias="Follow" type="fr.cph.stock.entities.Follow"/>
		<typeAlias alias="Account" type="fr.cph.stock.entities.Account"/>
	</typeAliases>
	<environments default="development">
		<environment id="development">
			<transactionManager type="JDBC"/>
			<dataSource type="POOLED">
				<property name="driver" value="com.mysql.cj.jdbc.Driver"/>
				<property name="url" value="jdbc:mysql://${db.ip}/${db.name}?useSSL=false&amp;serverTimezone=Europe/Paris"/>
				<property name="username" value="${db.user}"/>
				<property name="password" value="${db.password}"/>
				<property name="poolPingQuery" value="select 1"/>
				<property name="poolPingEnabled" value="true"/>
			</dataSource>
		</environment>
	</environments>
	<mappers>
		<mapper resource="mybatis/User.xml"/>
		<mapper resource="mybatis/Company.xml"/>
		<mapper resource="mybatis/Equity.xml"/>
		<mapper resource="mybatis/Portfolio.xml"/>
		<mapper resource="mybatis/CurrencyData.xml"/>
		<mapper resource="mybatis/ShareValue.xml"/>
		<mapper resource="mybatis/Index.xml"/>
		<mapper resource="mybatis/Follow.xml"/>
		<mapper resource="mybatis/Account.xml"/>
	</mappers>
</configuration>
