<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="FollowDao">
	<resultMap type="Follow" id="FollowResult">
		<result property="id" column="followId" />
		<result property="companyId" column="companyId" />
		<result property="quantity" column="quantity" />
		<result property="unitCostPrice" column="unitCostPrice" />
		<result property="yieldPersonal" column="yieldPersonal" />
		<result property="lowerLimit" column="lowerLimit" />
		<result property="higherLimit" column="higherLimit" />
		<result property="yieldFrequency" column="yieldFrequency" />
		<result property="yieldMonth" column="yieldMonth" />
		<association property="company" resultMap="CompanyResult" />
	</resultMap>

	<resultMap type="Company" id="CompanyResult">
		<result property="id" column="companyId" />
		<result property="yahooId" column="yahooId" />
		<result property="name" column="name" />
		<result property="market" column="market" />
		<result property="currency" column="currency" />
		<result property="sector" column="sector" />
		<result property="industry" column="industry" />
		<result property="quote" column="quote" />
		<result property="yesterdayClose" column="yesterdayClose" />
		<result property="changeInPercent" column="changeInPercent" />
		<result property="yearLow" column="yearLow" />
		<result property="yearHigh" column="yearHigh" />
		<result property="yield" column="yield" />
		<result property="realTime" column="realTime" />
		<result property="manual" column="manual" />
		<result property="marketCapitalization" column="marketCapitalization" />
		<result property="lastUpdate" column="lastUpdate" />
	</resultMap>

	<insert id="insertOneFollow" parameterType="Follow">
		insert into follow (id, companyId, userId, lowerLimit, higherLimit)
		values (0, #{companyId},
		#{userId},#{lowerLimit}, #{higherLimit})
	</insert>
	<select id="selectOneFollow" parameterType="Map" resultType="Follow">
		select * from follow where userId = #{userId} and companyId = #{companyId}
	</select>
	<update id="updateOneFollow" parameterType="Follow">
		update follow set lowerLimit = #{lowerLimit},  higherLimit = #{higherLimit} where id = #{id}
	</update>
	<delete id="deleteOneFollow" parameterType="Follow">
		delete from follow where id = #{id}
	</delete>
	<select id="selectListFollow" parameterType="int" resultMap="FollowResult">
		select 
		follow.id AS followId,
		follow.companyId AS companyId,
		yahooId,
		userId,
		higherLimit,
		lowerLimit,
		name,
		market,
		currency,
		industry,
		sector,
		quote,
		yield,
		yesterdayClose,
		changeInPercent,
		yearLow,
		yearHigh,
		realTime,
		marketCapitalization,
		manual,
		lastUpdate
		from follow
		JOIN company ON follow.companyId = company.id 
		AND userId = #{id}
		ORDER BY name
	</select>

</mapper>